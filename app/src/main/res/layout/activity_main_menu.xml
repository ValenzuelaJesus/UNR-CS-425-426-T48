<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainMenu" android:id="@+id/coordinatorLayout" android:background="#FFFFFF">


    <TextView
            android:text="AR-U Virtual Tour Guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginBottom="34dp" app:layout_constraintBottom_toTopOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/brand_logophoto_1"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="60dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="AR Scanner "
            android:layout_width="210dp"
            android:layout_height="0dp" android:id="@+id/ARbutton"
            android:background="@drawable/button_color"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginBottom="228dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/mainSearch"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainSearch"
            android:background="@drawable/button_color"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/mainOptions" app:layout_constraintTop_toBottomOf="@+id/ARbutton"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/mainOptions"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainOptions"
            android:background="@drawable/button_color"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/mainSearch" android:layout_marginBottom="132dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="225dp"
            android:layout_height="0dp" app:srcCompat="@drawable/university_logo_rgb_vertical_blue"
            android:id="@+id/imageView3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="105dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ARbutton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="226dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>